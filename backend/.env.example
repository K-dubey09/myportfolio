# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/portfolio
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/portfolio
MONGODB_URI=mongodb://localhost:27017/my-portfolio

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# JWT Secret - Generate a secure random string
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin User Credentials (for initial setup)
ADMIN_EMAIL=admin@portfolio.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Portfolio Admin

# ===========================================
# APPWRITE CONFIGURATION
# ===========================================
# Appwrite Cloud/Self-Hosted Configuration
# Get your credentials from: https://cloud.appwrite.io/ → Settings
# IMPORTANT: When creating API Key, select ALL scopes for full functionality

# Appwrite Project Endpoint
# For Appwrite Cloud: https://cloud.appwrite.io/v1
# For Self-Hosted: http://localhost/v1 or your custom domain
APPWRITE_ENDPOINT=https://syd.cloud.appwrite.io/v1

# Your Appwrite Project ID (found in Project Settings)
APPWRITE_PROJECT_ID=68ef61ed0005c49591cf

# API Key with all scopes (Settings → API Keys → Create API Key)
APPWRITE_API_KEY=standard_18150406c51bc764ae8ccf5e7549719d16660ca454357472ec4c8335f76cffcd63378ca21deac13f7281cf6ae3ad22c2d79a94b2ad7894fb8bff682a4db88cbde9ddc22b66165a7f9880b9ebb85c54eb8f6b2cff53e31118e6adfb416fb93b3ccf4b1ef31bce2bcc49ef57762e41d19bfafb58d9125902e7dbb3a5d0f57a690a

# Appwrite Database ID (optional - for Appwrite Database features)
# If not set, MongoDB will be used as the primary database
# APPWRITE_DATABASE_ID=your-database-id

# Appwrite Storage Bucket ID (optional - for file storage)
# If not set, GridFS will be used for file storage
# APPWRITE_BUCKET_ID=your-bucket-id

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# For contact form email notifications
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-specific-password
# EMAIL_TO=recipient@email.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Upload directory for local file storage
UPLOAD_PATH=uploads/